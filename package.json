{
  "name": "easy-peasy",
  "version": "3.4.0-alpha.23",
  "description": "Vegetarian friendly state for React",
  "license": "MIT",
  "main": "dist/easy-peasy.js",
  "umd:main": "dist/easy-peasy.umd.js",
  "module": "dist/easy-peasy.esm.js",
  "source": "src/index.js",
  "types": "./index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "patches",
    "scripts",
    "src",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ctrlplusb/easy-peasy.git"
  },
  "homepage": "https://easy-peasy.now.sh",
  "author": "Sean Matheson <sean@ctrlplusb.com>",
  "keywords": [
    "react",
    "redux",
    "state",
    "typescript"
  ],
  "scripts": {
    "build": "microbundle src/index.js --define NODE_ENV=production --format cjs,es,umd --jsx React.createElement",
    "clean": "rimraf ./dist && rimraf ./coverage",
    "lint": "eslint src",
    "postinstall": "node ./scripts/run-patches",
    "prepublish": "yarn run build",
    "test": "jest",
    "test:coverage": "yarn run test -- --coverage",
    "test:coverage:deploy": "yarn run test:coverage && codecov"
  },
  "mangle": {
    "regex": "^_"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn run test"
    }
  },
  "resolutions": {
    "@types/react": "16.9.34"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "dependencies": {
    "debounce": "^1.2.0",
    "immer": "6.0.2",
    "is-plain-object": "^3.0.0",
    "memoizerific": "^1.11.3",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "symbol-observable": "^1.2.0",
    "ts-toolbelt": "^6.6.2",
    "use-memo-one": "^1.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-json-strings": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/react": "16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/react-redux": "^7.1.7",
    "app-root-dir": "^1.0.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.5.1",
    "codecov": "^3.6.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "husky": "^4.2.5",
    "jest": "^25.5.4",
    "lint-staged": "^10.2.2",
    "microbundle": "^0.11.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^9.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.1.3",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.1",
    "shallowequal": "^1.1.0",
    "title-case": "^3.0.2",
    "typescript": "3.9.1-rc",
    "typings-tester": "^0.3.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/node_modules/regenerator-runtime/runtime",
      "@testing-library/jest-dom/extend-expect"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(coverage|dist|node_modules|tools)/"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "airbnb",
      "prettier"
    ],
    "rules": {
      "array-callback-return": 0,
      "camelcase": 0,
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "no-nested-ternary": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "react/forbid-prop-types": 0,
      "react/jsx-filename-extension": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/no-array-index-key": 0,
      "react/react-in-jsx-scope": 0,
      "react/sort-comp": 0
    }
  },
  "eslintIgnoreConfig": [
    "node_modules/",
    "coverage/",
    "dist/",
    "*.ts"
  ],
  "prettier": {
    "parser": "typescript",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write \"src/**/*.js\"",
      "git add"
    ]
  }
}
